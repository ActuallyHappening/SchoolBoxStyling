echo "Building ..."

set -e

# Compile typescript
./compile

# Compile chat-feature
cd chat-feature
npm run build
cd ..

# Move to flutter project root directory
cd ..

# Remove build directory, forces flutter to rebuild every time
rm -rf ./build/web

# Build
echo "Building flutter web ..."
flutter build web --web-renderer html --csp
echo "Flutter build complete"

# Move into build folder
cd ./build/web

# Remove unnecessary files for production
echo "Removing unnecessary files ..."
rm -rf ./__pycache__
rm content.ts
rm package-lock.json
rm package.json
rm popup.ts
rm tsconfig.json
rm build
rm macro.py
rm -rf ./node_modules
rm compile
# remove chat-feature
rm -rf ./chat-feature # Still keeps chat-dist folder

# Remove files from web/ dir
cd ../../web
rm content.js
rm popup.js
rm content.js.map
rm popup.js.map

echo "Done"

# Success!
echo "Built. Success!"