{
    "name": "Better Schoolbox Styling",
    "description": "Allows you to style schoolbox to your hearts content!",
    "version": "1.6.0",
    "content_security_policy": {
        "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "icons/Binary swift icon.png"
    },
    "content_scripts": [{
      "matches": ["https://schoolbox.emmanuel.qld.edu.au/*"],
      "js": ["content.js"]
    }],
    "permissions": [
      "activeTab",
      "storage"
    ],
    "manifest_version": 3
}