{
    "name": "Schoolbox Styling",
    "description": "Style schoolbox, but better!",
    "version": "1.1.0",
    "content_security_policy": {
        "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "icons/Icon-192.png"
    },
    "content_scripts": [{
      "matches": ["https://schoolbox.emmanuel.qld.edu.au/*"],
      "js": ["content.js"]
    }],
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "manifest_version": 3
}